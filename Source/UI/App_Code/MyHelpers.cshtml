@helper ShowGameResult(UI.Models.PlayedGame.PlayerGameResultDetails playerGameResult, string gameNameToShow){
    @* //TODO need to convert this to a static method and unit test.*@
    <span class="gamename">
    @if (gameNameToShow != null && gameNameToShow != "")
    {
        @* Cannot figure out how to call another HTML helper inside this helper....*@
        @gameNameToShow

    }else
    {
        @playerGameResult.PlayerName
    }
    </span> <text>- </text>
    <span class="gamerank">
    @switch (playerGameResult.GameRank)
    {
        case 1:
            <span class="firstplace">1st Place</span>
            break;
        case 2:
        <span class="secondplace">2nd Place</span>
            break;
        case 3:
        <span class="thirdplace">3rd Place</span>
            break;
        case 4:
        <span class="fourthplace">4th Place</span>
            break;
        default:
        <span>BIG LOSER</span>
            break;
    }
</span><text> - (</text>@playerGameResult.GordonPoints<text> pts.)</text>

}