@model IEnumerable<BusinessLogic.Models.PlayedGame>

@{
    ViewBag.Title = "Recent Games";
}

<h2>Recent Games</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Game Name
        </th>
        <th>
           Date Played
        </th>
        <th>Result</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style='font-weight: 300'>
            @Html.ActionLink(item.GameDefinition.Name, "Details", "GameDefinition", new { id = item.GameDefinition.Id }, new { })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DatePlayed)
        </td>
        <td>
            @foreach (var result in item.PlayerGameResults)
            {
                @MyHelpers.ShowGameResult(result, false);
                <br/>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
