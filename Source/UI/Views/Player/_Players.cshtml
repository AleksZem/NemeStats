@model IList<BusinessLogic.Models.Player>
<div class="playersList">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="fl-left">
                Players
            </h4>
            <div class="fl-right">
                @Html.Action("SavePlayer", "Player")
            </div>
            <div class="fl-clear"></div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th class="col-md-11">
                                Player Name
                            </th>
                            <th class="col-md-1">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.Name, MVC.Player.Details(item.Id, null))
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Player", new { id = item.Id })" title="Edit">
                                        <i class="fa fa-pencil fa-3x"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>