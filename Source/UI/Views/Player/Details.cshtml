@using UI.HtmlHelpers
@using System.Collections.Generic;
@using UI.Models.PlayedGame;
@model UI.Models.Players.PlayerDetailsViewModel

@{
    ViewBag.Title = "Player details";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Info</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-1">
                    <strong>
                        @Html.DisplayNameFor(model => model.PlayerName)
                    </strong>
                </div>

                <div class="col-md-2">
                    @Html.DisplayFor(model => model.PlayerName)
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <strong>
                        @Html.DisplayNameFor(model => model.Active)
                    </strong>
                </div>

                <div class="col-md-2">
                    @Html.DisplayFor(model => model.Active)
                </div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-2">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.PlayerId }, new { @class = "btn btn-sm btn-primary" })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (Model.PlayerGameResultDetails.Any())
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Recent Games @ViewBag.RecentGamesMessage</h4>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date Played</th>
                            <th>Game</th>
                            <th>Rank</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var playerGameResult in @Model.PlayerGameResultDetails)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @playerGameResult.DatePlayed.ToShortDateString()
                                </td>
                                <td>
                                    @Html.ActionLink(playerGameResult.GameName, "Details", "GameDefinition", new { id = playerGameResult.GameDefinitionId }, new { })
                                </td>
                                <td>
                                    @Html.GameResults(playerGameResult)
                                </td>
                                <td>
                                    <span class="glyphicon glyphicon-book"></span>
                                    @Html.ActionLink("Details", "Details", "PlayedGame", new { id = playerGameResult.PlayedGameId }, new { })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>

            </div>
        </div>
    }
</div>

<div class="row">
    @if (@Model.HasNemesis)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Nemesis</h4>
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Player Name</th>
                            <th>Games Lost</th>
                            <th>% Lost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.ActionLink(Model.NemesisName, "Details", "Player", new { id = Model.NemesisPlayerId }, new { })
                            </td>
                            <td>
                                @Model.NumberOfGamesLostVersusNemesis
                            </td>
                            <td>
                                @Model.LossPercentageVersusPlayer
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Statistics</h4>
        </div>
        <div class="panel-body">
            Total Games: @Model.TotalGamesPlayed
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>









