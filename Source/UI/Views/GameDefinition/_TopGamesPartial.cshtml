@model IEnumerable<UI.Models.GameDefinitionModels.TopGameViewModel>
<div id="nemesisChangeVote" class="fl-right" style="margin-top: 21px; margin-bottom: 10.5px;"></div>
<div class="fl-clear"></div>
<div class="flip-scroll">
    <table class="table table-hover table-striped" id="topGamesTable">
        <thead>
            <tr>
                <th></th>
                <th>Games Played</th>
                <th>Gaming Groups</th>
            </tr>
        </thead>
        @{ var position = 1; }
        @foreach (UI.Models.GameDefinitionModels.TopGameViewModel topGame in @Model)
        {
            <tr class="game-item" data-position="@position">
                @{position++;}
                <td class="bgg-link-col">
                    @if (topGame.BoardGameGeekUri != null)
                    {
                        <a href="@topGame.BoardGameGeekUri" target="_blank;">
                            @if (!string.IsNullOrEmpty(topGame.ThumbnailImageUrl))
                            {
                                <img class="bgg-thumbnail" src="@topGame.ThumbnailImageUrl" alt="View on BoardGameGeek.com" title="View on BoardGameGeek.com"/>
                            }
                            else
                            {
                                <img src="~/Content/Images/bgg_small.png" alt="View on BoardGameGeek.com" title="View on BoardGameGeek.com"/>
                            }

                        </a>
                    }
                </td>
                <td>@topGame.GamesPlayed</td>
                <td>@topGame.GamingGroupsPlayingThisGame</td>
            </tr>
         }
    </table>
</div>