@model BusinessLogic.Models.GameDefinition

<div class="createGameDefinitionPartial">
    @using (Html.BeginForm())
    {
        <div class="form-inline">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-2" })
                <div class="col-md-offset-3">
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-pull-2">
                    <button class="btn btn-primary">Create game</button>
                </div>
            </div>
        </div>
    }
</div>
