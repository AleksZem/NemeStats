@model BusinessLogic.Models.GameDefinition

@{
    Layout = null;
}

<div class="createGameDefinitionPartial">
    @using (Html.BeginForm())
    {
        <div class="form-inline">
            @Html.HiddenFor(m => m.BoardGameGeekObjectId)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3 panel-text-vertical-center" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-2", id = "gameNameInput" })
                <div class="col-md-offset-3">
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-pull-2">
                    <button class="btn btn-default" id="createGameDefinitionFromPartial">Create Game</button>
                </div>
            </div>
        </div>
    }
</div>
