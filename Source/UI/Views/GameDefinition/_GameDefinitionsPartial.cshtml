@model IList<UI.Models.GameDefinitionModels.GameDefinitionSummaryViewModel>

@{
    Layout = null;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="fl-left">
            Games This Group Plays
        </h4>
        @if ((bool?)ViewData["canEdit"] == true)
        {
            <div class="fl-right">
                @Html.Action("CreatePartial", "GameDefinition")
            </div>
        }
        <div class="fl-clear"></div>
    </div>
    <div class="panel-body">
        <div class="table-responsive gameDefinitionsList">
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th class="col-md-4">
                            Name
                        </th>
                        <th class="col-md-3">
                            Games Played
                        </th>
                        <th class="col-md-4">
                            Previous/Current Champion
                        </th>
                        <th class="col-md-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Name, "Details", "GameDefinition", new { id = item.Id }, new { })
                                @if (item.BoardGameGeekUri != null)
                                {
                                    <a href="@item.BoardGameGeekUri.AbsoluteUri" id="@item."><img src="~/Content/Images/bgg_small.png" alt="View on BoardGameGeek.com" title="View on BoardGameGeek.com" /></a>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.TotalNumberOfGamesPlayed)</td>
                            <td>
                                @if (item.PreviousChampionName != null)
                                {
                                    <span style="text-decoration: line-through">
                                        @Html.ActionLink(item.PreviousChampionName,
                                            "Details",
                                            "Player",
                                            new { id = item.PreviousChampionPlayerId },
                                            new { })
                                    </span>
                                    <span>/</span>
                                }
                                @if (item.ChampionName != null)
                                {
                                    @Html.ActionLink(item.ChampionName, "Details", "Player", new { id = item.ChampionPlayerId }, new { })
                                }
                            </td>
                            <td>
                                @if (item.UserCanEdit)
                                {
                                    <a href="@Url.Action("Edit", "GameDefinition", new
                                             {
                                                 id = item.Id
                                             })" title="Edit">
                                        <span class="fa fa-pencil fa-3x"></span>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

