@using BusinessLogic.Models.PlayedGames
@model UI.Models.Home.HomeIndexViewModel

@{
    ViewBag.Title = "Board Game Tracking Made Fun";
    ViewBag.Description = "Welcome to NemeStats where tracking board games is fun and easy!";
}

<div class="home-container">
    <div class="home-banner">
        <img src="~/Content/Images/NemeStats.png" alt="NemeStats" style="width: 70%; margin-left:15%; margin-right:15%;" />
    </div>

    <div id="mainCarousel" class="carousel slide" data-ride="carousel" data-interval="15000" data-pause="hover">
        <ol class="carousel-indicators">
            <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mainCarousel" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active" style="min-height: 365px;">
                <div class="container">
                    <div class="carousel-caption" id="homePageCarouselPage1">
                        <h2>Keep Track Of Your Nemesis</h2>
                        <p class="lead">
                            NemeStats (as in "Nemesis Statistics") is a free web application for logging games played among a relatively stable group of players. It takes only
                            a moment and will give you statistics on your win percentage, average rank in games, who is your Nemesis and who is your Minion, etc.
                            When you register, a new "Gaming Group" will be created where you and other players in your group can watch your statistics materialize over time.
                            <br /><br />
                            All information is publicly accessible so feel free to browse around! If you'd like to give it a shot just @Html.ActionLink("Register", "Register", "Account", null, null),
                            set up the game and players you want to record, and start tracking!
                        </p>
                        <p>
                            NemeStats is open source and accepting feature requests
                            via <a href='https://github.com/jakejgordon/NemeStats' target="_blank">GitHub</a>. Check out the features that are being worked on or in the backlog
                            <a href='https://waffle.io/jakejgordon/NemeStats' target="_blank">here</a>.
                        </p>
                    </div>
                </div>
            </div>

            <div class="item" style="min-height: 365px;">
                <div class="container">
                    <div class="carousel-caption">
                        <div class="col-md-4" id="homePageCarouselSetupGames">
                            <span class="home-page-icon">
                                <i class="fa fa-gamepad"></i>
                            </span>
                            <h2>Setup Games</h2>
                            <p>
                                Manage the list of Games your Gaming Group plays here. A Game Definition must be created in order to log a played game.
                                Games may be linked to Board Game Geek for convenient linkage.
                            </p>
                            <p>@Html.ActionLink("Manage Games", "Index", "GamingGroup", null, null, UI.Controllers.GamingGroupController.SECTION_ANCHOR_GAMEDEFINITIONS, null, null)</p>
                        </div>
                        <div class="col-md-4" id="homePageCarouselSetupPlayers">
                            <span class="home-page-icon">
                                <i class="fa fa-users"></i>
                            </span>
                            <h2>Setup Players</h2>
                            <p>
                                Manage the list of Players in your Gaming Group. A Player must be created in order to log a played game for that Player. You can send invitations to Players so they can also record games in your Gaming Group.
                            </p>
                            <p>@Html.ActionLink("Manage Players", "Index", "GamingGroup", null, null, UI.Controllers.GamingGroupController.SECTION_ANCHOR_PLAYERS, null, null)</p>
                        </div>
                        <div class="col-md-4" id="homePageCarouselTrackGameResults">
                            <span class="home-page-icon">
                                <i class="fa fa-line-chart"></i>
                            </span>
                            <h2>Track Game Results</h2>

                            <p>
                                Log the results of your board games here. This is where the magic happens! NemeStats has a unique system for tracking played games that allows for some really sweet statistics.
                            </p>

                            <p>@Html.ActionLink("Game Results", "Create", "PlayedGame")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="home-body-container">
        <div class="col-md-6">
            <div class="fl-left">
                <h3>Top 5 Players</h3>
            </div>
            <div id="topPlayersVote" class="fl-right" style="margin-top: 21px; margin-bottom: 10.5px;"></div>
            <div class="fl-clear"></div>
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="topFivePlayersTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Games</th>
                            <th>Win %</th>
                            <th>Points</th>
                        </tr>
                    </thead>
                    @foreach (UI.Models.Players.TopPlayerViewModel playerSummaryViewModel in @Model.TopPlayers)
                    {
                        <tr>
                            <td>@Html.ActionLink(playerSummaryViewModel.PlayerName, "Details", "Player", new { id = playerSummaryViewModel.PlayerId }, new { })</td>
                            <td>@playerSummaryViewModel.TotalNumberOfGamesPlayed</td>
                            <td>@playerSummaryViewModel.WinPercentage</td>
                            <td>@playerSummaryViewModel.TotalPoints</td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="col-md-6">
            <div class="fl-left">
                <h3>@Model.RecentPublicGames.Count() Recent Games @Html.ActionLink(" - View More", MVC.PlayedGame.ShowRecentlyPlayedGames())</h3>
            </div>
           @Html.Partial(MVC.PlayedGame.Views._RecentlyPlayedGamesPartial, Model.RecentPublicGames)
        </div>


        <div class="col-md-6">
            <div class="fl-left">
                <h3>Recent Nemesis Changes</h3>
            </div>
            <div id="nemesisChangeVote" class="fl-right" style="margin-top: 21px; margin-bottom: 10.5px;"></div>
            <div class="fl-clear"></div>
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="recentNemesisChangesTable">
                    <thead>
                        <tr>
                            <th>Player</th>
                            <th>
                                New Nemesis <i class="fa fa-question-circle" data-container="body" data-toggle="popover" data-placement="right"
                                               data-content="The Nemesis is the Player with the highest win % vs. this Player. Must have won at least 3 games to be designated as the Nemesis."></i>
                            </th>
                            <th>Loss %</th>
                        </tr>
                    </thead>
                    @foreach (UI.Models.Nemeses.NemesisChangeViewModel nemesisChange in @Model.RecentNemesisChanges)
                    {
                        <tr>
                            <td>@Html.ActionLink(nemesisChange.PlayerName, "Details", "Player", new { id = nemesisChange.PlayerId }, new { })</td>
                            <td>@Html.ActionLink(nemesisChange.NemesisPlayerName, "Details", "Player", new { id = nemesisChange.NemesisPlayerId }, new { })</td>
                            <td>@nemesisChange.LossPercentageVersusNemesis</td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="col-md-6">
            <h3>Top @Model.TopGamingGroups.Count() Gaming Groups @Html.ActionLink(" - View More", MVC.GamingGroup.GetTopGamingGroups())</h3>
            @Html.Partial(MVC.GamingGroup.Views._TopGamingGroupsPartial, Model.TopGamingGroups)

        </div>
    </div>
</div>
<br />
<div class="col-md-12">
    <hr />
    <footer>
        <p>
            &copy; @DateTime.Now.Year - NemeStats
            | <a href="https://plus.google.com/115226456486429841980" rel="publisher">Google+</a>
            | <a href="https://twitter.com/NemeStats" class="twitter-follow-button" data-show-count="false">Follow &#64;NemeStats</a>
            <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
            | <a href="mailto:nemestats@gmail.com?subject=NemeStats feedback">Send Feedback</a>
        </p>
    </footer>
</div>

