@model BusinessLogic.Models.PlayerGameResult

@Model.Player.Name <text>- </text>
@switch (@Model.GameRank)
{
    case 1:
        <span>1st Place</span>
        break;
    case 2:
        <span>2nd Place</span>
        break;
    case 3:
        <span>3rd Place</span>
        break;
    case 4:
        <span>4th Place</span>
        break;
    default:
        <span>BIG LOSER</span>
        break;
}