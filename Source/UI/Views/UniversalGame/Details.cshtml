@model UI.Models.UniversalGameModels.UniversalGameDetailsViewModel

@{
    ViewBag.Title = Model.BoardGameGeekInfo.GameName + " - Universal Stats";
    Layout = MVC.Shared.Views._BaseLayout;
}

<div id="gamedefinition-details">
    <h2 class="page-header">
        @Html.DisplayFor(model => Model.BoardGameGeekInfo.GameName) - Universal Statistics
    </h2>

    <div class="row">
        @Html.Partial(MVC.UniversalGame.Views._BoardGameGeekInfo, Model.BoardGameGeekInfo)
    </div>
    @{
        var gamingGroupData = Model.GamingGroupGameDefinitionSummary;
    }

    @if (gamingGroupData != null)
    {
        <div class="row">
            @Html.Partial(MVC.Player.Views._GameDefinitionPlayersSummaryPartial, gamingGroupData.GameDefinitionPlayerSummaries)
        </div>

        <div class="row">
            @Html.Partial(MVC.GameDefinition.Views._GamingGroupGameDefinitionStatsPartial, gamingGroupData.GamingGroupGameDefinitionStats)
        </div>

        <div class="row">
            @Html.Partial(MVC.GameDefinition.Views._GameDefinitionPlayedGamesPartial, gamingGroupData.PlayedGames, new ViewDataDictionary { { "PanelTitle", gamingGroupData.PlayedGamesPanelTitle } })
        </div>
    }

</div>

