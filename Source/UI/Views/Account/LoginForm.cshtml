@model UI.Models.LoginViewModel
@{
    Layout = null;

}

<div class="panel panel-default login-box">
    <div class="panel-body social-login">
        @using (Html.BeginForm(MVC.Account.ExternalLogin()))
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-google btn-lg" id="gtm-google-login-button" name="provider" value="Google" title="Log in using your Google account"><i class="fa fa-google fa-lg"></i>Continue with Google</button>
        }
    </div>
    <div class="common-login">
        <div class="or">or</div>
        @using (Html.BeginForm(MVC.Account.Login(), FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "current-password" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group">
                <div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Log in" class="btn btn-primary btn-lg btn-fullwidth" />
                </div>
            </div>

            <div class="form-group forgot-password">
                <label>
                    @Html.ActionLink("Forgot Password?", MVC.Account.ForgotPassword())
                </label>
            </div>
        }
    </div>
</div>