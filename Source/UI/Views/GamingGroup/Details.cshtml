@model UI.Models.GamingGroup.GamingGroupPublicViewModel
@{
    ViewBag.Title = Model.Name;
    ViewBag.Description = "View full details for the Gaming Group: " + Model.Name;
    Layout = MVC.Shared.Views._BaseLayout;
}

<h2>@Model.Name</h2>

<div class="row">
    @Html.Partial(MVC.GamingGroup.Views._GamingGroupPublicDetailsPartial, Model.PublicDetailsView, new ViewDataDictionary { { "canEdit", false } })
</div>
<hr />

<div class="row">
    @Html.Partial("~/Views/Player/_PlayersPartial.cshtml", Model.Players, new ViewDataDictionary { { "canEdit", false } })
</div>

<div class="row">
    @Html.Partial("~/Views/GameDefinition/_GameDefinitionsPartial.cshtml", Model.GameDefinitionSummaries)
</div>

<div class="row">
    @Html.Partial("~/Views/PlayedGame/_PlayedGamesPartial.cshtml", Model.PlayedGames)
</div>

<div id="NemeStatsPointsLineGraph">
    <svg style='height:500px;width:1140px'> </svg>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/d3")
    @Styles.Render("~/bundles/d3/css")
    <script type="text/javascript">
        $(document).ready(function () {
            var gamingGroupDetails = new window.Views.GamingGroup.GamingGroupView();
            var settings = { "gamingGroupId" : @Model.Id };
            gamingGroupDetails.renderNemeStatsPointsLineGraph();
        });
    </script>
}
