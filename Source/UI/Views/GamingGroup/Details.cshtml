@model UI.Models.GamingGroup.GamingGroupPublicViewModel
@using UI.HtmlHelpers
@{
    ViewBag.Title = Model.Name;
    Layout = MVC.Shared.Views._BaseLayout;
}

<h2>@Model.Name</h2>
<hr />

<div class="row">
    @Html.Partial("~/Views/Player/_Players.cshtml", Model.Players, new ViewDataDictionary { { "canEdit", false } })
</div>

<div class="row">
    @Html.Partial("~/Views/GameDefinition/_GameDefinitionsPartial.cshtml", Model.GameDefinitionSummaries)
</div>

<div class="row">
    @Html.Partial("~/Views/PlayedGame/_PlayedGamesPartial.cshtml", Model.RecentGames)
</div>